# Server Configuration
PORT=3000
BASE_URL=http://localhost:3011
TRANSPORT=http

# Security
# MASTER_KEY: 64-character hex string or strong passphrase for session encryption
MASTER_KEY=
# REDIRECT_URI_ALLOWLIST: Comma-separated list of allowed OAuth redirect URIs
REDIRECT_URI_ALLOWLIST=http://localhost:3000/callback

# Dual Authentication
# MCP_API_KEY: A single master API key for simple connection
MCP_API_KEY=
# MCP_API_KEYS: A comma-separated list of allowed API keys
MCP_API_KEYS=

# Database (for persistent sessions)
DATABASE_URL=postgres://mcp:mcp@localhost:5432/mcp
POSTGRES_USER=mcp
POSTGRES_PASSWORD=mcp
POSTGRES_DB=mcp

# ClickUp Defaults (Optional, can be overridden per session)
CLICKUP_API_TOKEN=
TEAM_ID=
WRITE_MODE=write
CHAR_LIMIT=16000
